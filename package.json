{
  "name": "api-template",
  "version": "1.0.0",
  "type": "module",
  "description": "Professional API boilerplate with TypeScript, Fastify, Vitest, MySQL and OpenTelemetry",
  "main": "dist/index.js",
  "keywords": [
    "api",
    "boilerplate",
    "typescript",
    "fastify",
    "mysql",
    "opentelemetry"
  ],
  "author": "",
  "license": "MIT",
  "scripts": {
    "prepare": "command -v git >/dev/null 2>&1 && git config core.hooksPath .hooks || echo 'Git not available, skipping hooks setup'",
    "commitlint": "commitlint",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest test/integration",
    "test:unit": "vitest test/unit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/auth": "^5.0.2",
    "@fastify/bearer-auth": "^10.1.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/etag": "^6.0.3",
    "@fastify/helmet": "^13.0.1",
    "@fastify/otel": "^0.9.3",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/instrumentation-fastify": "^0.48.0",
    "@opentelemetry/instrumentation-http": "^0.203.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@prisma/client": "^6.13.0",
    "dotenv": "^17.2.1",
    "fastify": "^5.4.0",
    "mysql2": "^3.14.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.13.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.32.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "lockfile-lint": "^4.14.1",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "vitest-sonar-reporter": "^2.0.1"
  },
  "lockfile-lint": {
    "path": "package-lock.json",
    "type": "npm",
    "validate-https": true,
    "allowed-hosts": [
      "npm",
      "npm.pkg.github.com"
    ]
  }
}
