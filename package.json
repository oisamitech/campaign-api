{
  "name": "api-template",
  "version": "1.0.0",
  "description": "Professional API boilerplate with TypeScript, Fastify, Vitest, MySQL and OpenTelemetry",
  "main": "dist/index.js",
  "keywords": [
    "api",
    "boilerplate",
    "typescript",
    "fastify",
    "mysql",
    "opentelemetry"
  ],
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start:dev": "tsx watch src/index.ts",
    "start:prod": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "lint:lockfile": "lockfile-lint",
    "format": "biome check ./src",
    "migrate:up": "tsx src/database/migrate.ts up",
    "migrate:down": "tsx src/database/migrate.ts down",
    "prepare": "command -v git >/dev/null 2>&1 && git config core.hooksPath .hooks || echo 'Git not available, skipping hooks setup'",
    "commitlint": "commitlint"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/otel": "^0.9.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/instrumentation-fastify": "^0.48.0",
    "@opentelemetry/instrumentation-http": "^0.203.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "dotenv": "^17.2.1",
    "fastify": "^5.4.0",
    "mysql2": "^3.14.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "supertest": "^7.1.4",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "vitest-sonar-reporter": "^2.0.1",
    "lockfile-lint": "^4.14.1"
  },
  "lockfile-lint": {
    "path": "package-lock.json",
    "type": "npm",
    "validate-https": true,
    "allowed-hosts": [
      "npm",
      "npm.pkg.github.com"
    ]
  }
}
