#!/bin/sh

# Hook pre-push para executar testes, formata√ß√£o e lint antes do push
# Se qualquer comando falhar, o push ser√° interrompido

echo "üöÄ Executando verifica√ß√µes antes do push..."

# Cores para output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Fun√ß√£o para log colorido
log_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

log_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

# Flag para controlar se algum comando falhou
failed=0

# 1. Executar formata√ß√£o do c√≥digo
log_info "Executando formata√ß√£o do c√≥digo..."
if npm run format; then
    log_success "‚úÖ C√≥digo formatado com sucesso!"
else
    log_error "‚ùå Formata√ß√£o falhou!"
    failed=1
fi

# 3. Executar lint para verificar qualidade do c√≥digo
log_info "Executando lint para verificar qualidade do c√≥digo..."
if npm run lint; then
    log_success "‚úÖ Lint passou com sucesso!"
else
    log_error "‚ùå Lint falhou!"
    failed=1
fi

# Verificar se algum comando falhou
if [ $failed -eq 1 ]; then
    log_error "üí• Algumas verifica√ß√µes falharam. Push interrompido!"
    log_warning "Corrija os problemas acima antes de fazer o push."
    exit 1
fi

log_success "üéâ Todas as verifica√ß√µes passaram! Push autorizado."
exit 0
